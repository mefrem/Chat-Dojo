rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Voice messages
    match /voice-messages/{conversationId}/{filename} {
      // Allow authenticated users to read voice messages
      allow read: if request.auth != null;
      
      // Allow authenticated users to upload voice messages
      // Limit file size to 10MB for voice messages
      allow write: if request.auth != null &&
                      request.resource.size < 10 * 1024 * 1024 &&
                      request.resource.contentType.matches('audio/.*');
    }
    
    // Profile pictures (for future use)
    match /profile-pictures/{userId}/{filename} {
      // Anyone can read profile pictures
      allow read: if true;
      
      // Users can only upload their own profile picture
      // Limit file size to 5MB
      allow write: if request.auth != null &&
                      request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
    }
  }
}

